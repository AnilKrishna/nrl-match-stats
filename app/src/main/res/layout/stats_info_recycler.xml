<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".matchstats.view.MatchStatsActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:background="@android:color/black">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStatsType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:layout_gravity="start|center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="STATS TYPE"
                android:layout_weight=".01"
                android:textSize="25sp"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgArrow"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:padding="10dp"
                android:layout_gravity="end|center"
                android:layout_weight=".01"
                app:srcCompat="@android:drawable/ic_menu_more"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/teamA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

            <TextView
                    android:id="@+id/teamANameTextView"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Team Name"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_team_one_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clipToPadding="true"
                    android:clipChildren="false"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/teamB"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

            <TextView
                    android:id="@+id/teamBNameTextView"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Team Name"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_team_two_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clipToPadding="true"
                    android:clipChildren="false"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>